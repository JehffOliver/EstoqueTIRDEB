@model Usuario

@{
    Layout = "_Layout_Deslogado";
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - RaiaDrogasil</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .login-container {
            width: 300px;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #4CAF50; /* Verde */
        }

        input[type="text"],
        input[type="password"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            background-color: #4CAF50; /* Verde */
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049; /* Verde mais escuro */
            }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Login - RaiaDrogasil</h2>
        <form asp-controller="Autenticacao" asp-action="Login" method="post">
            <input type="text" asp-for="NomeUsuario" class="form-control" id="login" placeholder="Login" required>
            @Html.ValidationMessageFor(x => x.NomeUsuario)
            <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Senha" required>
            @Html.ValidationMessageFor(x => x.Senha)
            <input type="submit" value="Entrar">
        </form>
    </div>

</body>
</html>
