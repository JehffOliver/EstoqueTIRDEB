@model EstoqueTIRDEB.Models.ItensFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Itens</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Itens.Nome" class="control-label"></label>
                <input asp-for="Itens.Nome" class="form-control" />
                <span asp-validation-for="Itens.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itens.Modelo" class="control-label"></label>
                <input asp-for="Itens.Modelo" class="form-control" />
                <span asp-validation-for="Itens.Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itens.Especificações" class="control-label"></label>
                <input asp-for="Itens.Especificações" class="form-control" />
                <span asp-validation-for="Itens.Especificações" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itens.DataAquisicao" class="control-label"></label>
                <input asp-for="Itens.DataAquisicao" class="form-control" />
                <span asp-validation-for="Itens.DataAquisicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Itens.CategoriaId" class="control-label">Categoria</label>
                <select asp-for="Itens.CategoriaId" asp-items="@(new SelectList(Model.Categoria,"Id", "Name"))" class="form-control"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
