@model IEnumerable<EstoqueTIRDEB.Models.Itens>


@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<h2>Itens</h2>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    #chartContainer {
        width: 100%;
        height: 400px;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-default">Adicionar Item</a>
</p>

<body>

    <table class="table table-striped table-hover">
        <thead>
            <tr class="success">
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especificações)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataAquisicao)
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especificações)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAquisicao)
                </td>

                <td>
                    <form asp-controller="Itens" asp-action="Adicionar" method="post">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">Adicionar e Remover</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <h1>Dashboard de Estoque</h1>
        <canvas id="chartContainer"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('chartContainer').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Produto A', 'Produto B', 'Produto C', 'Produto D', 'Produto E'],
                    datasets: [{
                        label: 'Quantidade em Estoque',
                        data: [20, 30, 15, 25, 40],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.6)',
                            'rgba(54, 162, 235, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(75, 192, 192, 0.6)',
                            'rgba(153, 102, 255, 0.6)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>
