@model IEnumerable<EstoqueTIRDEB.Models.Itens>
@inject EstoqueTIRDEB.Services.EstoqueService _estoqueService



@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<body>
    <h2>Itens</h2>

    <p>
        <a asp-action="Create" class="btn btn-default">Adicionar Item</a>
    </p>


    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Especificações</th>
                <th>Data de Aquisição</th>
                <th>Quantidade</th>
                <th>Categoria</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Modelo</td>
                <td>@item.Especificações</td>
                <td>@item.DataAquisicao</td>
                <td>@item.Quantidade</td>
                <td>@(item.Categoria != null ? item.Categoria.Nome : "")</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Remover</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
