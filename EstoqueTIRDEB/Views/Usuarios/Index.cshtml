@model Usuario

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_Deslogado";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Login - RaiaDrogasil</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .login-container {
            width: 300px;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #4CAF50; /* Verde */
        }

        input[type="text"],
        input[type="password"] {
            width: calc(100% - 20px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            background-color: #4CAF50; /* Verde */
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #45a049; /* Verde mais escuro */
            }
    </style>
</head>
<body>



    <div class="login-container">
        <h2>Login - RaiaDrogasil</h2>
        <form asp-controller="Usuarios" asp-action="Login" method="post">
            <div class="mb-3">
                <label for="login" class="form-inline">Login</label>
                <input type="text" asp-for="NomeUsuario" class="form-control" id="login" />
                @Html.ValidationMessageFor(x => x.NomeUsuario)
            </div>
            <div class="mb-3">
                <label for="senha" class="form-inline">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="senha" />
                @Html.ValidationMessageFor(x => x.NomeUsuario)
            </div>
            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
        </form>
    </div>

</body>
</html>
