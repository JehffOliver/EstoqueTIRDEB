@model IEnumerable<EstoqueTIRDEB.Models.Itens>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container">
    <h1>Dashboard de Estoque</h1>
    <canvas id="chartContainer"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    alert('teste');
    document.addEventListener('DOMContentLoaded', function () {
        var ctx = document.getElementById('chartContainer').getContext('2d');

        // Obter os dados dos itens do estoque
        var labels = [];
        var data = [];

        @foreach (var item in Model)
        {
            <text>labels.push('@item.Nome');</text>
            <text>data.push('@item.Quantidade');</text>
        }

        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Quantidade em Estoque',
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>